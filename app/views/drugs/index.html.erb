<p id="notice"><%= notice %></p>
<h1 class=header>Drugs</h1>

<div class=table_containers>
  <table>
    <thead>
      <tr>
        <th>Drug name</th>
        <th>Drug price</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @drugs.each do |drug| %>
        <tr>
          <td><%= drug.drug_name %></td>
          <td><%= drug.drug_price %></td>
          <td><%= link_to drug do %>
            <i class="fa-solid fa-eye"></i>
          <% end %></td>
          <td><%= link_to edit_drug_path(drug) do %>
            <i class="fas fa-pen"></i>
          <% end %></td>
          <td><%= link_to  drug, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class =buttons_container>
  <%= link_to 'Add New Drug', new_drug_path , :class => 'button'%>
</div>
