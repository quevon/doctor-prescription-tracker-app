<p id="notice"><%= notice %></p>
<h1 class=header>Doctor Prescriptions

</h1>
<i class="fa-duotone fa-prescription"></i>


<div class= "search-container">
  <%= form_with url: doctors_path, method: :get do |form| %>
    <%= form.text_field :query,placeholder: "Search", id: "search-input", class: "search" %>
  <%end%>
</div>

<div class=table_containers>

  <table>
    
    <thead>
      <tr>
        <th>Doctors name</th>
        <th>Phone Number</th>
        <th>Total Prescriptions</th>
        <th>Prescriptions</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
      <tbody id="doctors-collection">
        <%= render @doctors %>
      </tbody>
    </table>
  </div>
  <%if @doctors.blank?%>
    <div class =no_record>
            <p><%= "No data available"%></p>
    <div>
  <%end%>
<br>

<div class =buttons_container>
  <%= link_to 'Add New Doctor', new_doctor_path , :class => 'button'%>
</div>


<%= javascript_pack_tag 'index_search.js' %>